def esDivisble():
    numeroDivisible = 0
    for numero in range(100, 1000):
        if numero % 19 == 0:
             numeroDivisible = numeroDivisible + 1
    return ("Son %2d números con tres cifras los que son múltiplos de 19" % numeroDivisible)

print (esDivisble())

