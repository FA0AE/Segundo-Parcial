def calcularValorPi(valorDivisor):
    divisor = 0
    for n in range (1, divisor+1):
        divisor = 1/n**4 + divisor
        print(divisor)


def main():
    valorDivisor = int(input("Escribe un número: "))
    print(calcularValorPi(valorDivisor))


main()

