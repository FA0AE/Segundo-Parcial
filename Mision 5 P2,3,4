def hacerPiramidesDeNumeros():
    ultimoValor = 0
    for i in range(9):
        print(ultimoValor*10+i+1, "*", 8, "+", i+1, "=", ((ultimoValor*10)+i+1)*8+i+1)
        ultimoValor = ultimoValor * 10 + i + 1

def hacerPiramide():
    primerTermino = 0
    for numero in range(9):
        print((((primerTermino*100)//10) + numero + 1), "*", 8, "+", numero+1, "=", (((primerTermino*100)//10) + numero + 1) * 8 + (numero+1))
        primerTermino = ((primerTermino * 100) // 10) + numero + 1

    print("------------------------------")

    primerUno = 0
    for valor in range(1000000000):
        print((primerUno*10) + 1), "*", ((primerUno*10) + 1), "=", (((primerUno*10) + 1)*((primerUno*10) + 1))
        primerUno = ((primerUno*10) + 1)

def hacerPiramide():

primerUno = 0
for valor in range(1000000000):
    print((primerUno * 10) + 1), "*", ((primerUno * 10) + 1), "=", (((primerUno * 10) + 1) * ((primerUno * 10) + 1))
    primerUno = ((primerUno * 10) + 1)

hacerPiramide()
